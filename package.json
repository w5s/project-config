{
  "name": "@w5s/project-config-src",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git"
  },
  "license": "MIT",
  "files": [],
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "/@babel/eslint-parser",
      "/eslint"
    ]
  },
  "scripts": {
    "build": "concurrently \"npm:build:*\" ",
    "postbuild": "npm run docs",
    "build:packages": "turbo run build",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:packages": "turbo run clean",
    "code-analysis": ":",
    "configure": "yarn mrm configure",
    "coverage": ":",
    "develop": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && turbo run docs",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:packages": "turbo run format",
    "format:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json --ignore-pattern='packages/*/**' --fix",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:packages": "turbo run lint",
    "lint:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json --ignore-pattern='packages/*/**'",
    "mrm": "mrm --preset @w5s/mrm-preset",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepare:husky": "is-ci || husky install",
    "prepare:packages": "turbo run prepare",
    "release": "is-ci && lerna publish --yes || lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "spellcheck": "cspell --no-progress '**' --exclude='packages/*/**' && turbo run spellcheck",
    "test": "concurrently \"npm:test:*\" ",
    "test:packages": "turbo run test",
    "validate": "npm run build && npm run lint && npm test"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.json": [
      "eslint"
    ],
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "sort-keys-fix"
    ],
    "extends": [
      "@w5s/eslint-config"
    ],
    "rules": {
      "prefer-object-spread": "off",
      "unicorn/prefer-module": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "lib/",
    "**/tsconfig.json",
    ".vscode/**",
    "**/_tester/**",
    "public/"
  ],
  "jest": {
    "preset": "es-jest",
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/eslint-parser": "7.18.9",
    "@commitlint/cli": "17.0.3",
    "@types/node": "16.11.48",
    "@w5s/commitlint-config": "workspace:*",
    "@w5s/eslint-config": "workspace:*",
    "@w5s/mrm-preset": "workspace:*",
    "@w5s/ts-config": "workspace:*",
    "concurrently": "7.3.0",
    "conventional-changelog-gitmoji-config": "1.4.3",
    "cspell": "6.6.1",
    "es-jest": "2.0.0",
    "eslint": "8.21.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "28.1.3",
    "lerna": "5.4.2",
    "lint-staged": "13.0.3",
    "markdown-magic": "2.6.0",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "mrm": "4.0.0",
    "prettier": "2.7.1",
    "turbo": "1.4.3",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "packageManager": "yarn@3.2.2"
}

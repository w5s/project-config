{
  "name": "@w5s/project-config-src",
  "private": true,
  "files": [],
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "/@babel/eslint-parser",
      "/eslint"
    ]
  },
  "scripts": {
    "build": "npm-run-all -p \"build:*\"",
    "postbuild": "npm run docs",
    "build:empty": ":",
    "build:packages": "turbo run build",
    "clean": "turbo run clean",
    "configure": "yarn mrm configure",
    "coverage": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && turbo run docs",
    "format": "eslint . --ext=cjs,js,jsx,ts,tsx,json --ignore-pattern 'packages/**' --fix && turbo run lint",
    "prepare": "npm-run-all -p \"prepare:*\"",
    "lint": "eslint . --ext=cjs,js,jsx,ts,tsx,json --ignore-pattern 'packages/**' && turbo run lint",
    "mrm": "mrm --preset @w5s/mrm-preset",
    "prepare:empty": ":",
    "prepare:husky": "is-ci || husky install",
    "prepare:packages": "lerna bootstrap",
    "release": "is-ci && lerna publish --yes || lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "test": "npm-run-all -p \"test:*\"",
    "test:packages": "turbo run test",
    "__test:cspell": "cspell '**' --no-summary",
    "validate": "npm run build && npm run lint && npm test"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.json": [
      "eslint"
    ],
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "sort-keys-fix"
    ],
    "extends": [
      "@w5s/eslint-config"
    ],
    "rules": {
      "prefer-object-spread": "off",
      "unicorn/prefer-module": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "lib/",
    "**/tsconfig.json",
    ".vscode/**",
    "**/_tester/**"
  ],
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/eslint-parser": "7.17.0",
    "@commitlint/cli": "16.2.4",
    "@types/node": "^16.11.24",
    "@w5s/commitlint-config": "workspace:*",
    "@w5s/eslint-config": "workspace:*",
    "@w5s/mrm-preset": "workspace:*",
    "@w5s/ts-config": "workspace:*",
    "cspell": "5.19.7",
    "eslint": "8.14.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "lerna": "4.0.0",
    "lint-staged": "12.4.1",
    "markdown-magic": "2.6.0",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "mrm": "4.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "turbo": "1.2.5",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "mrmConfig": {
    "packageArchetype": "workspace"
  },
  "packageManager": "yarn@3.2.0"
}

{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**", "dist/**", ".next/**"]
    },
    "test": {},
    "lint": {
      "dependsOn": ["//#lint:root"]
    },
    "//#lint:root": {},
    "prepare": {},
    "format": {
      "dependsOn": ["//#format:root"]
    },
    "//#format:root": {},
    "docs": {},
    "spellcheck": {},
    "clean": {
      "cache": false
    },
    "develop": {
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.settings.json"]
}

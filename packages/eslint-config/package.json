{
  "name": "@w5s/eslint-config",
  "version": "2.0.20",
  "description": "ESLint configuration presets",
  "keywords": [
    "eslint",
    "config",
    "lint"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "src/",
    "index.js",
    "index.d.ts",
    "!*.d.ts.map",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node ../../markdown.mjs",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "postpack": "npx clean-package restore",
    "prepack": "npx clean-package",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" \":\"",
    "test:script": "scripts/test",
    "test_:rule-coverage": "eslint-find-rules --unused"
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@w5s/dev": "^2.2.1",
    "@w5s/prettier-config": "^2.0.14",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jest": "^28.0.0",
    "eslint-plugin-jsdoc": "^48.0.0",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-yml": "^1.1.0",
    "find-up": "^5.0.0",
    "parse-gitignore": "^2.0.0"
  },
  "devDependencies": {
    "@types/eslint": "8.56.10",
    "@types/parse-gitignore": "1.0.2",
    "@types/react": "18.3.3",
    "@typescript-eslint/parser": "7.13.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-find-rules": "4.1.0",
    "prettier": "3.3.2",
    "react": "18.3.1",
    "vite": "5.3.1",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "eslint": "8.x",
    "prettier": "2.x || 3.x",
    "typescript": "4.x || 5.x"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "clean-package": "../../clean-package.config.cjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

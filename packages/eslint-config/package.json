{
  "name": "@w5s/eslint-config",
  "version": "1.0.11",
  "description": "ESLint configuration presets",
  "keywords": [
    "eslint",
    "config",
    "lint"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "main": "index.js",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts",
    "!example/**/*",
    "!*.cjs",
    "index.js",
    "index.d.ts",
    "*.js",
    "rules/*.js"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf lib",
    "docs": "node ../../markdown.mjs",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" \":\"",
    "test:script": "scripts/test",
    "test_:rule-coverage": "eslint-find-rules --unused"
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@w5s/dev": "^1.0.5",
    "@w5s/prettier-config": "^1.0.19",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-jsdoc": "^44.1.0",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "eslint-plugin-yml": "^1.1.0",
    "find-up": "^5.0.0",
    "parse-gitignore": "^2.0.0"
  },
  "devDependencies": {
    "@types/eslint": "8.40.0",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/parse-gitignore": "1.0.0",
    "@types/prettier": "2.7.3",
    "@types/react": "18.2.7",
    "@typescript-eslint/parser": "5.59.7",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-find-rules": "4.1.0",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "vite": "4.3.9",
    "vitest": "0.31.2"
  },
  "peerDependencies": {
    "eslint": "8.x",
    "prettier": "2.x",
    "typescript": "4.x || 5.x"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

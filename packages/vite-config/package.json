{
  "name": "@w5s/vite-config",
  "version": "1.0.0",
  "description": "Vite & Vitest config",
  "keywords": [
    "vite",
    "vitest"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/vite-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/vite-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist/",
    "src/",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "npx concurrently \"npm:build:*\" \":\"",
    "build:tsc": "scripts/build",
    "clean": "npx concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf dist .cache/build",
    "docs": "node ../../markdown.mjs",
    "format": "npx concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "npx concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "npx concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "npx concurrently \"npm:test:*\" \":\"",
    "test:src": "vitest run"
  },
  "dependencies": {
    "vite-plugin-dts": "^3.3.0"
  },
  "devDependencies": {
    "typescript": "*",
    "vite": "*",
    "vitest": "*"
  },
  "peerDependencies": {
    "vite": "4.x",
    "vitest": "0.x"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

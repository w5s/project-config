{
  "name": "@w5s/cspell-config",
  "version": "2.2.12",
  "description": "CSpell configuration presets",
  "keywords": [
    "cspell"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/cspell-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/cspell-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "exports": {
    ".": "./cspell-ext.json",
    "./cspell-ext.json": "./cspell-ext.json",
    "./dist/*": "./dist/*",
    "./dict/*": "./dict/*"
  },
  "typings": "./index.d.ts",
  "files": [
    "cspell-ext.json",
    "dict/",
    "dist/",
    "src/",
    "index.js",
    "index.d.ts",
    "!*.d.ts.map",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "__build:dict": "cd dict;cspell-tools-cli compile filetypes.txt",
    "build": "npm-run-all -s \"build:*\" empty",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "npm-run-all -s \"clean:*\" empty",
    "clean:tsc": "rm -rf dist",
    "docs": "node ../../markdown.mjs",
    "empty": ":",
    "format": "npm-run-all -s \"format:*\" empty",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "npm-run-all -s \"lint:*\" empty",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "postpack": "npx clean-package restore",
    "prepack": "npx clean-package",
    "prepare": "npm-run-all -s \"prepare:*\" empty",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "npm-run-all -s \"test:*\" empty",
    "test:src": "vitest run"
  },
  "dependencies": {
    "@cspell/cspell-bundled-dicts": "^8.0.0"
  },
  "devDependencies": {
    "@cspell/cspell-tools": "8.6.1",
    "@cspell/cspell-types": "8.6.1",
    "vite": "5.2.6",
    "vitest": "1.4.0"
  },
  "peerDependencies": {
    "cspell": "^6.0.0 || ^7.0.0 || ^8.0.0"
  },
  "peerDependenciesMeta": {
    "cspell": {
      "optional": true
    }
  },
  "clean-package": "../../clean-package.config.cjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

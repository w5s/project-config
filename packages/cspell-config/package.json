{
  "name": "@w5s/cspell-config",
  "version": "1.0.0.alpha.0",
  "description": "CSpell configuration presets",
  "keywords": [
    "cspell"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/cspell-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/cspell-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "exports": {
    ".": "./cspell-ext.json",
    "./cspell-ext.json": "./cspell-ext.json",
    "./lib/*": "./lib/*",
    "./dict/*": "./dict/*"
  },
  "typings": "./index.d.ts",
  "files": [
    "dict/**/*",
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).d.ts.map",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:src": "npm run clean:src;tsc",
    "build;dict": "cspell-tools-cli compile compatibility-words.txt",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:src": "rm -rf lib/*",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" ",
    "test:src": "jest"
  },
  "jest": {
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "es-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/build/",
      "/.cache/",
      "/docs/",
      "/public/"
    ]
  },
  "dependencies": {
    "@cspell/cspell-bundled-dicts": "^6.0.0"
  },
  "devDependencies": {
    "@cspell/cspell-tools": "^6.18.0",
    "@cspell/cspell-types": "^6.18.0",
    "@jest/globals": "29.3.1"
  },
  "peerDependencies": {
    "cspell": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

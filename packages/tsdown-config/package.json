{
  "name": "@w5s/tsdown-config",
  "version": "1.0.0",
  "private": true,
  "description": "Prettier shared configuration",
  "keywords": [
    "typescript",
    "config",
    "tsc",
    "tsdown"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/tsdown-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/tsdown-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist/",
    "src/",
    "index.js",
    "index.d.ts",
    "!*.d.ts.map",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "tsdown": {
    "entry": [
      "src/index.ts"
    ],
    "sourcemap": true,
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true
  },
  "scripts": {
    "build": "npx run-p \"build:*\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "npx run-p \"clean:*\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node ../../markdown.mjs",
    "format": "npx run-p \"format:*\"",
    "format:src": "eslint . --fix",
    "lint": "npx run-p \"lint:*\"",
    "lint:src": "eslint .",
    "postpack": "npx clean-package restore",
    "prepack": "npx clean-package",
    "prepare": "npx run-p \"prepare:*\"",
    "prepare:empty": ":",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "npx run-p \"test:*\"",
    "test:src": "vitest run"
  },
  "devDependencies": {
    "tsdown": "0.15.9",
    "vite": "7.1.12",
    "vitest": "4.0.5"
  },
  "peerDependencies": {
    "tsdown": "8.x"
  },
  "peerDependenciesMeta": {
    "tsdown": {
      "optional": true
    }
  },
  "clean-package": "../../clean-package.config.cjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffect": false
}

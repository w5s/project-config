{
  "name": "@w5s/commitlint-config",
  "version": "1.0.26",
  "description": "Commitlint configuration presets",
  "keywords": [
    "commitlint",
    "git",
    "lint"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/commitlint-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/commitlint-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "exports": {
    ".": "./index.js",
    "./lib/*": "./lib/*"
  },
  "typings": "./index.d.ts",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).d.ts.map",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf lib",
    "docs": "node ../../markdown.mjs",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean;npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" \":\"",
    "test:src": "vitest run"
  },
  "dependencies": {
    "@commitlint/types": "^17.0.0",
    "@w5s/conventional-changelog": "^1.0.12"
  },
  "devDependencies": {
    "@commitlint/lint": "17.6.3",
    "vite": "4.3.7",
    "vitest": "0.31.0"
  },
  "peerDependencies": {
    "@commitlint/cli": "^16.0.0 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "@commitlint/cli": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

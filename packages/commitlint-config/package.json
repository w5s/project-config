{
  "name": "@w5s/commitlint-config",
  "version": "1.0.0-alpha.5",
  "description": "Commitlint configuration presets",
  "keywords": [
    "commitlint",
    "git",
    "lint"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/commitlint-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w5s/project-config.git",
    "directory": "packages/commitlint-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "exports": "./lib/index.js",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).d.ts.map",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts"
  ],
  "scripts": {
    "build": "npm-run-all -p 'build:*'",
    "build:src": "tsc",
    "clean": "tsc -- --build --clean",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json",
    "lint": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json",
    "spellcheck": "cspell --no-progress '**'",
    "test": "jest",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "jest": {
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "es-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/build/",
      "/.cache/",
      "/docs/",
      "/public/"
    ]
  },
  "dependencies": {
    "@commitlint/types": "^17.0.0",
    "conventional-changelog-conventionalcommits": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/lint": "^17.0.0",
    "@jest/globals": "^28.0.0"
  },
  "peerDependencies": {
    "@commitlint/cli": "^16.0.0 || ^17.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@w5s/mrm-preset",
  "version": "1.0.0-alpha.9",
  "description": "Mrm configuration presets",
  "keywords": [
    "mrm",
    "config",
    "bootstrap"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/mrm-preset#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w5s/project-config.git",
    "directory": "packages/mrm-preset"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "main": "config.json",
  "scripts": {
    "build": "npm-run-all -p 'build:*'",
    "build:empty": ":",
    "build:tsc": "tsc --noEmit --skipLibCheck",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "eslint . --fix",
    "lint": "eslint .",
    "test": "mkdir _tester; cd _tester; mrm bootstrap --dir ..; mrm configure --dir .."
  },
  "dependencies": {
    "debug": "^4.3.3",
    "mrm-core": "^7.0.0",
    "semver-intersect": "^1.4.0",
    "sync-directory": "^4.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "mrm": "4.0.0"
  },
  "engines": {
    "node": ">=14.x",
    "yarn": ">=1.x"
  },
  "publishConfig": {
    "access": "public"
  }
}

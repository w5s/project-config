{
  "name": "@w5s/ts-config",
  "version": "1.0.0-alpha.20",
  "description": "Typescript compiler configuration presets",
  "keywords": [
    "typescript",
    "config",
    "tsc"
  ],
  "homepage": "https://github.com/w5s/project-config/blob/main/packages/ts-config#readme",
  "bugs": {
    "url": "https://github.com/w5s/project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:w5s/project-config.git",
    "directory": "packages/ts-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "main": "./tsconfig.json",
  "files": [
    "tsconfig.json"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" ",
    "test:src": "tsc -p __tests__/tsconfig.json --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "typescript": ">=4.7.x"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

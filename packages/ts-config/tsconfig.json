{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "display": "W5s",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error", // Enforce import type instead of import
    "isolatedModules": true,
    "lib": ["ES2020"],
    "module": "node16",
    "moduleDetection": "force",
    "moduleResolution": "node16",
    "noEmit": true,
    "noEmitOnError": true,
    // "noFallthroughCasesInSwitch": true, => Prefer ESLint validation
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "preserveValueImports": true,
    // "noUnusedLocals": true, => Prefer ESLint validation
    // "noUnusedParameters": true, => Prefer ESLint validation
    "pretty": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2020",
    "useDefineForClassFields": true
  },
  "exclude": ["**/lib/**", "**/dist/**", "**/build/**", "**/node_modules/**"]
}

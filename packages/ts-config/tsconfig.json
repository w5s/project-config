{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "display": "W5S",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "Node16",
    "moduleDetection": "force",
    "moduleResolution": "Node16",
    "noEmit": true,
    "noEmitOnError": true,
    // "noFallthroughCasesInSwitch": true, => Prefer ESLint validation
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "outDir": "${configDir}/dist",
    // "noUnusedLocals": true, => Prefer ESLint validation
    // "noUnusedParameters": true, => Prefer ESLint validation
    "pretty": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ESNext", // Use the most compatible value with bundlers, this can be overridden in project
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true
  },
  "exclude": ["**/lib/**", "**/dist/**", "**/build/**", "**/node_modules/**"]
}
